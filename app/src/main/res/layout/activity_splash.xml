<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_for_intro">

    <!-- Cloud Image at the top -->

    <!-- Welcome Text at the bottom -->

    <ImageView
        android:id="@+id/cloud_image"
        android:layout_width="223dp"
        android:layout_height="195dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="90dp"
        android:contentDescription="Cloud icon"
        android:src="@drawable/cloud_icon" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cloud_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="-9dp"
        android:layout_marginEnd="-48dp"
        android:shadowColor="#B199B3"
        android:text="Weather"
        android:textColor="@android:color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

</RelativeLayout>

