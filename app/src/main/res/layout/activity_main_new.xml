<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/image_for_main">

    <!-- Fixed Search Bar at Top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/glass_background"
        android:orientation="horizontal"
        android:padding="12dp">

        <AutoCompleteTextView
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Искать город..."
            android:imeOptions="actionSearch"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="16sp"
            android:completionThreshold="2" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:contentDescription="Search"
            android:focusable="true"
            android:src="@drawable/ic_search" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main weather container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/glass_background"
                android:orientation="vertical"
                android:padding="13dp">

                <!-- Current Date and Time -->
                <TextView
                    android:id="@+id/current_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <!-- City Name (centered) -->
                <TextView
                    android:id="@+id/city_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="загркузка..."
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Current Temperature (centered) -->
                <TextView
                    android:id="@+id/current_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="--"
                    android:textColor="@android:color/white"
                    android:textSize="72sp"
                    android:textStyle="bold" />

                <!-- Min/Max Temperature -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/min_temperature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Min: --"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/max_temperature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="Max: --"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Animated Weather Icon using Lottie -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/weather_animation"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/clear_day" />

                <!-- Weather Condition Text -->
                <TextView
                    android:id="@+id/weather_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="загрузка..."
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <!-- Humidity and Wind -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <!-- Блок влажности -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="94dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/glass_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Анимация слева -->
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/humidity_animation"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/humidity_animation" />

                    <!-- Текст справа -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/humidity_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--%"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Влажность"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Блок ветра -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="94dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/glass_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Анимация слева -->
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/wind_animation"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/wind_animation" />

                    <!-- Текст справа -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/wind_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- km/h"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ветер"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Improved Hourly Timeline -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fillViewport="true"
                android:overScrollMode="never">

                <LinearLayout
                    android:id="@+id/hourly_timeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp" />

            </HorizontalScrollView>

            <!-- Hourly Forecast -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Почасовой прогноз"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/glass_background">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/temperature_chart"
                    android:layout_width="391dp"
                    android:layout_height="220dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation Button -->
    <Button
        android:id="@+id/next_days_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/button_background"
        android:text="Следующие дни ->"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>