<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/glass_background_for_nextdays"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Left side: Temperature -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/day_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25Â°"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/day_city_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mo-04.10.2025"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Center: Humidity and Wind -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/day_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity: 65%"
            android:textSize="14sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/day_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wind: 12 km/h"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Right side: Weather icon and condition -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/day_weather_animation"
            android:layout_width="72dp"
            android:layout_height="55dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/clear_day" />

        <TextView
            android:id="@+id/day_weather_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>

